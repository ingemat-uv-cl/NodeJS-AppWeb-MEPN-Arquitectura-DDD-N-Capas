doctype html
html
  head
    title #{title}
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")

    link(href="static/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    link(href="static/css/sweetalert2.css", rel="stylesheet")
      
    script(src="static/js/axios.min.js")
    script(src="static/js/jquery.min.js")
    script(src="static/js/prettydate.min.js")
    script(src="static/js/bootstrap.bundle.min.js")
    script(src="static/js/sweetalert2.min.js")
    
    script(src="index.js")
    
  body
    header.py-5.bg-primary.text-white
      div.bg-primary.container.text-left
        h1 #{title}
        p.lead #{subTitle}

    hr

    div#appTest
    div.container
      table.table.table-hover.table-bordered
        tbody
          each hit, i in hits
            tr(style="cursor: pointer;")
              td
                div.row
                  div.col-sm-8.row
                    i.material-icons.md-18 label_outline
                    -
                      var url;
                      if (hit.story_url)
                        url = hit.story_url;
                      else
                        url = hit.url;

                    a(href=url, target='_blank')= hit.story_title
                    p(style="color: #a8a8a8")= '. - ' + hit.author + ' -'
                  div.col-sm-3
                    p= hit.pretty_date
                  div.col-sm-1
                    i.material-icons(onclick='deletePost(' + hit.story_id + ')') delete
    hr

    footer.py-5.bg-dark
      div.container
        p.m-0.text-center.text-white #{footerTitle}
        p.m-0.text-center.text-white v#{footerVersion}
        p.m-0.text-center.text-white Copyright 2018 &copy;
          a(href='https://github.com/jtrujilloh', target='_blank') #{footerAuthor}

  
